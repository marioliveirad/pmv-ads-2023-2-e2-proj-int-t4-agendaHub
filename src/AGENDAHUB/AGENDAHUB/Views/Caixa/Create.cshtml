@model AGENDAHUB.Models.Caixa
<link rel="stylesheet" href="~/css/Caixa.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Nova movimentação";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-4 text-center">
        <form asp-action="Create">
            <input type="hidden" asp-for="UsuarioID" value="@ViewBag.UsuarioID" />

            <div class="form-group">
                <label asp-for="Categoria">Categoria</label>
                <select asp-for="Categoria" class="form-control">
                    <option value="Entrada">Entrada</option>
                    <option value="Saída">Saída</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor">Valor</label>
                <input asp-for="Valor" class="form-control" data-val="false" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data">Data</label>
                <input asp-for="Data" type="date" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao">Descrição</label>
                <input asp-for="Descricao" class="form-control" placeholder="Opcional" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group pt-4">
                <a asp-action="Index" class="btn btn-outline-warning">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
