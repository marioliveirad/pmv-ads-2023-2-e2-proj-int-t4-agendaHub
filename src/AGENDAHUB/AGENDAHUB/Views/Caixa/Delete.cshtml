@model AGENDAHUB.Models.Caixa
<link rel="stylesheet" href="~/css/Caixa.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<h3 class="text-center">Tem certeza de que deseja excluir este registro do Caixa?</h3>

<div class="container d-flex justify-content-center col-xl-8 col-12 mt-3">
    <div class="p-3" id="cardView">
        <table class="table mt-3 mx-auto">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                    <th>@Html.DisplayNameFor(model => model.Valor)</th>
                    <th>@Html.DisplayNameFor(model => model.Data)</th>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.Categoria)</td>
                    <td>@Html.DisplayFor(model => model.Valor)</td>
                    <td>@string.Format("{0:dd MMM yyyy}", Model.Data)</td>
                    <td>@Html.DisplayFor(model => model.Descricao)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row mt-3">
    <div class="col d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="UsuarioID" value="@ViewBag.UsuarioID" />
            <input type="hidden" asp-for="ID_Caixa" />
            <a asp-action="Index" class="btn btn-outline-warning">Voltar</a>
            <input type="submit" value="Excluir" class="btn btn-outline-danger" />
        </form>
    </div>
</div>
