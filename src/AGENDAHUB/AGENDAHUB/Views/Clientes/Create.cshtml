@model AGENDAHUB.Models.Clientes
<link rel="stylesheet" href="~/css/Clientes.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<h1 class="text-center">Cadastrar Novo Cliente</h1>

<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-4 text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label fw-bold"></label>
                <input asp-for="Nome" class="form-control text-center" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="CPF" class="control-label fw-bold"></label>
                <input asp-for="CPF" class="form-control text-center" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Contato" class="control-label fw-bold"></label>
                <input asp-for="Contato" class="form-control text-center" />
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Email" class="control-label fw-bold"></label>
                <input asp-for="Email" class="form-control text-center" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Observacao"class="control-label fw-bold"></label>
                <input asp-for="Observacao" class="form-control text-center" placeholder="Opcional"/>
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <div class="form-group pt-4">
                <a asp-action="Index" class="btn btn-outline-warning">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
